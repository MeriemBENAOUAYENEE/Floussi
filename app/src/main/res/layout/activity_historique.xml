<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff"
    tools:context=".historique">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/card_view"
        android:padding="30dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:text="Floussi"
            android:textColor="#fff"
            android:textSize="40dp"
            android:textStyle="bold">

        </TextView>


        <RelativeLayout
            android:id="@+id/search"
            android:layout_width="188dp"
            android:layout_height="100dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="200dp"
            android:textColor="#f6cac1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:textColor="#8f71ff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/balanceH"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="$12,593"
                android:textColor="#03082b"
                android:textSize="40dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp">

            </ImageView>

        </RelativeLayout>
    </RelativeLayout>








        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp">
            <TableLayout
                android:id="@+id/tablelay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

            </TableLayout>
        </androidx.core.widget.NestedScrollView>


    <DatePicker
        android:id="@+id/datePickerU"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:layout_marginTop="250dp"
        android:datePickerMode="spinner"
        android:spinnersShown="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:padding="30dp">


        <EditText
            android:id="@+id/expensesU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"
            android:hint="Expenses"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/costU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:ems="12"
            android:hint="Cost" />

        <EditText
            android:id="@+id/whenU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"
            android:inputType="textPersonName"
            android:layout_marginTop="100dp"
            android:hint="When" />



        <Button
            android:id="@+id/update"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="160dp"
            android:text="Update"
            android:backgroundTint="#84a9fb"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/changedateU"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="100dp"
            android:text="Change"
            android:backgroundTint="#b1a7eb"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/DeleteButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="160dp"
            android:text="Delete"
            android:backgroundTint="#b1a7eb"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/GetDateU"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="240dp"
            android:text="GetDate"
            android:backgroundTint="#84a9fb"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TxtGetDateU"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="245dp"
            android:textColor="#8f71ff"
            android:textSize="20dp" />



    </RelativeLayout>

</RelativeLayout>