<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    tools:context=".MainActivity"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/card_view"
        android:padding="30dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:text="Floussi"
            android:textColor="#fff"
            android:textSize="40dp"
            android:textStyle="bold">

        </TextView>


        <RelativeLayout
            android:id="@+id/search"
            android:layout_width="188dp"
            android:layout_height="100dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="200dp"
            android:textColor="#f6cac1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:textColor="#8f71ff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/balanceM"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="$12,593"
                android:textColor="#03082b"
                android:textSize="40dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp">

            </ImageView>

        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/buttonDepense"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#8f71ff"
        android:text="Expenses" />

    <Button
        android:id="@+id/buttonRenenue"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#f6cac1"
        android:text="Revenue" />

    <Button
        android:id="@+id/buttonCrypto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#84a9fb"
        android:text="Crypto" />

    <Button
        android:id="@+id/buttonHistory"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#b1a7eb"
        android:text="History of Expenses" />

    <Button
        android:id="@+id/buttonParam"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#6bfafa"
        android:text="Statistics" />





</LinearLayout>
